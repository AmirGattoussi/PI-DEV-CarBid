<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.LoginController">
    <children>
        <Rectangle arcHeight="51.0" arcWidth="50.0" fill="#ddd8d8" height="334.0" layoutX="359.0" layoutY="43.0" stroke="BLACK" strokeType="INSIDE" width="200.0" />
        <TextField fx:id="password" layoutX="384.0" layoutY="175.0" />
        <TextField fx:id="email" layoutX="384.0" layoutY="118.0" />
        <Text layoutX="442.0" layoutY="114.0" strokeType="OUTSIDE" strokeWidth="0.0" text="E-Mail" />
        <Text layoutX="434.0" layoutY="171.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password" />
        <Button fx:id="loginBtn" layoutX="436.0" layoutY="253.0" mnemonicParsing="false" onAction="#handleLogin" text="Login">
            <font>
                <Font name="Bell MT" size="14.0" />

            </font>
        </Button> 
        <Hyperlink fx:id="registerLink" layoutX="368.0" layoutY="322.0" onAction="#handleLinkClick" text="Don't have an account ? Register" />
      <Hyperlink fx:id="resetLink" layoutX="410.0" layoutY="291.0" onAction="#handleResetLink" text="Forgot Password ?" />
    </children>
</AnchorPane>
